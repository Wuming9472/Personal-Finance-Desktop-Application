<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.RegisterController">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>

                <!-- LATO SINISTRO: FORM REGISTRAZIONE (Bianco) -->
                <VBox alignment="CENTER" prefWidth="500.0" spacing="20.0"
                      style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                    </padding>
                    <children>

                        <!-- TITOLO -->
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Label text="Crea Account" textFill="#1e293b">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                                <Label text="Inizia a gestire le tue finanze oggi stesso." textFill="#64748b">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- USERNAME -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Username" textFill="#334155">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT"
                                      style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 6; -fx-background-radius: 6;">
                                    <children>
                                        <StackPane prefHeight="40.0" prefWidth="40.0">
                                            <children>
                                                <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                                         fill="#94a3b8" scaleX="0.7" scaleY="0.7" />
                                            </children>
                                        </StackPane>
                                        <TextField fx:id="usernameField"
                                                   promptText="Scegli un username"
                                                   style="-fx-background-color: transparent;"
                                                   HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- PASSWORD -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Password" textFill="#334155">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT"
                                      style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 6; -fx-background-radius: 6;">
                                    <children>
                                        <StackPane prefHeight="40.0" prefWidth="40.0">
                                            <children>
                                                <SVGPath content="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2z"
                                                         fill="#94a3b8" scaleX="0.7" scaleY="0.7" />
                                            </children>
                                        </StackPane>
                                        <PasswordField fx:id="passwordField"
                                                       promptText="Almeno 4 caratteri"
                                                       style="-fx-background-color: transparent;"
                                                       HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- CONFERMA PASSWORD -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Conferma Password" textFill="#334155">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT"
                                      style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 6; -fx-background-radius: 6;">
                                    <children>
                                        <StackPane prefHeight="40.0" prefWidth="40.0">
                                            <children>
                                                <SVGPath content="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                         fill="#94a3b8" scaleX="0.7" scaleY="0.7" />
                                            </children>
                                        </StackPane>
                                        <PasswordField fx:id="confirmPasswordField"
                                                       promptText="Ripeti password"
                                                       style="-fx-background-color: transparent;"
                                                       HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- DOMANDE DI SICUREZZA -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Domande di sicurezza" textFill="#334155">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>

                                <!-- DOMANDA 1 -->
                                <VBox spacing="3.0">
                                    <children>
                                        <Label text="Domanda 1" textFill="#64748b" />
                                        <ComboBox fx:id="question1Box"
                                                  promptText="Seleziona una domanda"
                                                  prefWidth="Infinity" />
                                        <PasswordField fx:id="answer1Field"
                                                       promptText="Risposta"
                                                       style="-fx-background-color: transparent;" />
                                    </children>
                                </VBox>

                                <!-- DOMANDA 2 -->
                                <VBox spacing="3.0">
                                    <children>
                                        <Label text="Domanda 2" textFill="#64748b" />
                                        <ComboBox fx:id="question2Box"
                                                  promptText="Seleziona una domanda"
                                                  prefWidth="Infinity" />
                                        <PasswordField fx:id="answer2Field"
                                                       promptText="Risposta"
                                                       style="-fx-background-color: transparent;" />
                                    </children>
                                </VBox>

                                <!-- DOMANDA 3 -->
                                <VBox spacing="3.0">
                                    <children>
                                        <Label text="Domanda 3" textFill="#64748b" />
                                        <ComboBox fx:id="question3Box"
                                                  promptText="Seleziona una domanda"
                                                  prefWidth="Infinity" />
                                        <PasswordField fx:id="answer3Field"
                                                       promptText="Risposta"
                                                       style="-fx-background-color: transparent;" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- ERROR LABEL -->
                        <Label fx:id="errorLabel"
                               text="Errore"
                               textFill="#ef4444"
                               visible="false"
                               wrapText="true" />

                        <!-- BOTTONE REGISTRATI -->
                        <Button maxWidth="1.7976931348623157E308"
                                mnemonicParsing="false"
                                onAction="#handleRegister"
                                prefHeight="45.0"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;"
                                text="CREA ACCOUNT">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <effect>
                                <DropShadow height="10.0" radius="4.5" width="10.0">
                                    <color>
                                        <Color red="0.06" green="0.72" blue="0.5" opacity="0.4" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </Button>

                        <!-- LINK AL LOGIN -->
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Hai giÃ  un account?" textFill="#64748b" />
                                <Hyperlink onAction="#handleBackToLogin"
                                           text="Accedi qui"
                                           textFill="#3b82f6"
                                           underline="true" />
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>

                    </children>
                </VBox>

                <!-- LATO DESTRO: BRANDING (Blu Scuro - Speculare al Login) -->
                <VBox alignment="CENTER" prefWidth="400.0" spacing="20.0"
                      style="-fx-background-color: #0f172a;" HBox.hgrow="NEVER">
                    <children>
                        <StackPane>
                            <children>
                                <Circle fill="#1e293b" radius="60.0"
                                        stroke="TRANSPARENT" strokeType="INSIDE" />
                                <Text fill="WHITE" text="+" translateX="-1.0" translateY="-5.0">
                                    <font>
                                        <Font name="System Bold" size="64.0" />
                                    </font>
                                </Text>
                            </children>
                        </StackPane>
                        <Label text="Unisciti a BalanceSuite" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>
                        <TextFlow textAlignment="CENTER">
                            <children>
                                <Text fill="#94a3b8"
                                      text="Prendi il controllo del tuo futuro finanziario." />
                            </children>
                        </TextFlow>
                    </children>
                    <effect>
                        <DropShadow radius="10.0" width="21.0">
                            <color>
                                <Color opacity="0.3" />
                            </color>
                        </DropShadow>
                    </effect>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>
