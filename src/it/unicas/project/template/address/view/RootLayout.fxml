<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" stylesheets="@css/primer-light.css, @css/menu-style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.RootLayoutController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <children>
                        <StackPane>
                            <children>
                                <Circle fill="#0f172a" radius="24.0" scaleX="1.3" scaleY="1.3" stroke="TRANSPARENT" strokeType="INSIDE" translateY="-2.0" />
                                <HBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" scaleX="1.3" scaleY="1.3" spacing="3.0">
                                    <children>
                                        <Rectangle arcHeight="4.0" arcWidth="4.0" fill="#60a5fa" height="14.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="6.0" />
                                        <Rectangle arcHeight="4.0" arcWidth="4.0" fill="#3b82f6" height="24.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="6.0" />
                                        <Rectangle arcHeight="4.0" arcWidth="4.0" fill="WHITE" height="18.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="6.0" />
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" />
                                    </padding>
                                </HBox>
                            </children>
                        </StackPane>
                        <TextFlow textAlignment="CENTER" translateX="10.0" translateY="-3.0">
                            <children>
                                <Text fill="#0f172a" strokeType="OUTSIDE" strokeWidth="0.0" text="Balance">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Text>
                                <Text fill="#3b82f6" strokeType="OUTSIDE" strokeWidth="0.0" text="Suite">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Text>
                            </children>
                            <HBox.margin>
                                <Insets top="4.0" />
                            </HBox.margin>
                        </TextFlow>
                    </children>
                </HBox>

                <Button fx:id="btnHamburger" mnemonicParsing="false" onAction="#handleToggleMenu" styleClass="hamburger-button" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-background-radius: 8;" text="â˜°" textFill="#475569">
                    <font>
                        <Font size="32.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                    </padding>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="lblPageTitle" text="Dashboard" textFill="#64748b">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>

                <Rectangle fill="#e2e8f0" height="50.0" width="1.0" />

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <StackPane scaleX="1.2" scaleY="1.2">
                            <children>
                                <Circle fill="#eff6ff" radius="18.0" scaleX="1.2" scaleY="1.2" stroke="#3b82f6" strokeType="INSIDE" />
                                <Label fx:id="lblInitials" scaleX="1.2" scaleY="1.2" text="?" textFill="#3b82f6">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </StackPane>

                        <MenuButton fx:id="btnUser" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Utente">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleSettings" style="-fx-text-fill: #000000;" text="Impostazioni" />
                                <MenuItem mnemonicParsing="false" onAction="#handleExit" style="-fx-text-fill: #000000;" text="Logout" />
                            </items>
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </MenuButton>
                    </children>
                </HBox>

            </children>
        </HBox>
    </top>

    <left>
        <VBox fx:id="leftMenu" prefHeight="520.0" prefWidth="250.0" spacing="8.0" style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-width: 0 1 0 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 2, 0);" BorderPane.alignment="CENTER">
            <children>

                <Button alignment="CENTER_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowDashboard" prefHeight="50.0" styleClass="menu-button" text="Dashboard" textAlignment="CENTER" textFill="#1e293b">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <padding>
                        <Insets left="24.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" top="30.0" />
                    </VBox.margin>
                </Button>

                <Button alignment="CENTER_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowMovements" prefHeight="50.0" styleClass="menu-button" text="Movimenti" textAlignment="CENTER" textFill="#1e293b">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <padding>
                        <Insets left="24.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" />
                    </VBox.margin>
                </Button>

                <Button alignment="CENTER_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowBudget" prefHeight="50.0" styleClass="menu-button" text="Budget" textAlignment="CENTER" textFill="#1e293b">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <padding>
                        <Insets left="24.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" />
                    </VBox.margin>
                </Button>

                <Button alignment="CENTER_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowReport" prefHeight="50.0" styleClass="menu-button" text="Report" textAlignment="CENTER" textFill="#1e293b">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <padding>
                        <Insets left="24.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" />
                    </VBox.margin>
                </Button>

                <Button alignment="CENTER_LEFT" graphicTextGap="15.0" layoutX="10.0" layoutY="216.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowAccount" prefHeight="50.0" styleClass="menu-button" text="Account" textAlignment="CENTER" textFill="#1e293b">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <padding>
                        <Insets left="24.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </left>
   <bottom>
        <StackPane style="-fx-background-color: #f8fafc;" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin></StackPane>
   </bottom>

</BorderPane>
