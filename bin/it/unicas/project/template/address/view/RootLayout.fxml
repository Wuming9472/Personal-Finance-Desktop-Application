<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" stylesheets="@css/primer-light.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.RootLayoutController">

  <!-- TOP BAR -> logo, titolo, utente -->

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
            </padding>
            <children>

                <!--  LOGO  -->
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <children>
                        <!-- Icona -->
                        <StackPane>
                            <children>
                                <Circle fill="#0f172a" radius="24.0" stroke="TRANSPARENT" strokeType="INSIDE" />
                                <HBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="3.0">
                                    <children>
                                        <Rectangle arcHeight="4.0" arcWidth="4.0" fill="#60a5fa" height="14.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="6.0" />
                                        <Rectangle arcHeight="4.0" arcWidth="4.0" fill="#3b82f6" height="24.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="6.0" />
                                        <Rectangle arcHeight="4.0" arcWidth="4.0" fill="WHITE" height="18.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="6.0" />
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" />
                                    </padding>
                                </HBox>
                            </children>
                        </StackPane>
                        <!-- Scritta -->
                        <TextFlow textAlignment="CENTER">
                            <children>
                                <Text fill="#0f172a" strokeType="OUTSIDE" strokeWidth="0.0" text="Balance">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Text>
                                <Text fill="#3b82f6" strokeType="OUTSIDE" strokeWidth="0.0" text="Suite">
                                    <font>
                                        <Font name="System Regular" size="24.0" />
                                    </font>
                                </Text>
                            </children>
                            <HBox.margin>
                                <Insets top="4.0" />
                            </HBox.margin>
                        </TextFlow>
                    </children>
                </HBox>

                <!-- Spazio flessibile per spingere l'utente a destra -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- 2. TITOLO PAGINA (Dinamico) -->
                <!-- Collega questo fx:id nel Controller per cambiare testo -->
                <Label fx:id="lblPageTitle" text="Dashboard" textFill="#64748b">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <!-- Divisore Verticale -->
                <Rectangle fill="#e2e8f0" height="30.0" width="1.0" />

                <!-- 3. MENU UTENTE -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <!-- Avatar Placeholder (Cerchio con iniziali) -->
                        <StackPane>
                            <children>
                                <Circle fill="#eff6ff" radius="18.0" stroke="#3b82f6" strokeType="INSIDE" />
                                <Label text="MR" textFill="#3b82f6">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </StackPane>
                        <MenuButton mnemonicParsing="false" style="-fx-background-color: transparent;" text="Mario Rossi">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Profilo" />
                                <MenuItem mnemonicParsing="false" text="Impostazioni" />
                                <MenuItem mnemonicParsing="false" text="Logout" />
                            </items>
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </MenuButton>
                    </children>
                </HBox>

            </children>
        </HBox>
    </top>

    <!-- ============================================ -->
    <!-- SIDEBAR (Sinistra) -->
    <!-- ============================================ -->
    <left>
        <VBox prefHeight="520.0" prefWidth="220.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #e2e8f0; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <children>

                <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowDashboard" prefHeight="45.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Dashboard" textFill="#475569">
                    <font>
                        <Font name="System Medium" size="14.0" />
                    </font>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>

                <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowMovements" prefHeight="45.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Movimenti" textFill="#475569">
                    <font>
                        <Font name="System Medium" size="14.0" />
                    </font>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>

                <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowBudget" prefHeight="45.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Budget" textFill="#475569">
                    <font>
                        <Font name="System Medium" size="14.0" />
                    </font>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>

                <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" layoutX="10.0" layoutY="216.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Account" textFill="#475569">
                    <font>
                        <Font name="System Medium" size="14.0" />
                    </font>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </left>

    <!-- ============================================ -->
    <!-- CENTRO (Qui caricherai le viste) -->
    <!-- ============================================ -->
    <center>
        <!-- Questo spazio verrÃ  riempito dinamicamente dal codice Java -->
        <StackPane style="-fx-background-color: #f8fafc;" BorderPane.alignment="CENTER" />
    </center>

</BorderPane>
